@page "/"

@{
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="divide-y">
                        @for(var i=0; i<=80; i++) {
                            <div>
                                <div class="row">
                                    <div class="col-auto">
                                        <span class="avatar">JL</span>
                                    </div>
                                    <div class="col">
                                        <div class="text-truncate">
                                            <strong>@i Jeffie Lewzey</strong> commented on your <strong>"I'm not a witch."</strong> post.
                                        </div>
                                        <div class="text-muted">yesterday</div>
                                    </div>
                                    <div class="col-auto align-self-center">
                                        <div class="badge bg-primary"></div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}